@{
    var errorTitle = TempData["Error_Title"];
    var errorDescription = TempData["Error_Detail"];
}


@if (errorTitle is not null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3 ">


        <div id="errorToast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <div>@errorTitle</div>
                    @if (errorDescription is not null)
                    {
                        <div>@errorDescription</div>
                    }
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>


    </div>

    <script>

    window.onload = function () {
        var toastEl = document.getElementById('errorToast');
        var toast = new bootstrap.Toast(toastEl, {
            autohide: true, // Toast otomatik olarak kapanacak
            delay: 3000     // 5 saniye sonra (5000 ms) kapanacak
        });
        toast.show();
    };

</script>
}