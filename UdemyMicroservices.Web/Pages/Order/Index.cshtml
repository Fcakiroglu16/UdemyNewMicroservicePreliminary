@page  
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel

@{
}
<form method="post">
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Payment information</h2>
            <div class="card mb-3">            
                
                <div class="card-body">

                  
                    <div class="mb-3">
                        <label asp-for="Order.Address.Province" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Address.Province" value="istanbul">
                        <span asp-validation-for="Order.Address.Province" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Order.Address.District" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Address.District" value="Maltepe">
                        <span asp-validation-for="Order.Address.District" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Order.Address.Line" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Address.Line" value="x cad. y mah.">
                        <span asp-validation-for="Order.Address.Line" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Order.Address.ZipCode" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Address.ZipCode" value="12345">
                        <span asp-validation-for="Order.Address.ZipCode" class="text-danger"></span>
                    </div>



                    <h3>Payment Information</h3>
                    <div class="mb-3">
                        <label asp-for="Order.Payment.CardHolderName" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Payment.CardHolderName" value="ahmet yıldız">
                        <span asp-validation-for="Order.Payment.CardHolderName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Order.Payment.CardNumber" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Payment.CardNumber" value="1111111111111111">
                        <span asp-validation-for="Order.Payment.CardNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.Payment.Cvv" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Payment.Cvv" value="123">
                        <span asp-validation-for="Order.Payment.Cvv" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Order.Payment.ExpiryDate" class="form-label"></label>
                        <input class="form-control" asp-for="Order.Payment.ExpiryDate" value="05/22">
                        <span asp-validation-for="Order.Payment.ExpiryDate" class="text-danger"></span>
                    </div>

                     
                
                    

                </div>
                


            </div>




            
        </div>
        <div class="col-md-6">
            <h2>Order Items</h2>
            <div class="card mb-3">
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Price</th>
                        
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.Order.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice</td>
                             
                            </tr>
                        }
                        </tbody>
                        <tfoot>
                        <tr class="table-info">
                            <td><strong>Total Price:</strong></td>
                            <td><strong>@Model.Order.TotalPrice.ToString("C")</strong></td>

                          
                        </tr>
                        </tfoot>
                    </table>
                    
                    <button type="submit" class="btn btn-primary">Complete payment</button>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
