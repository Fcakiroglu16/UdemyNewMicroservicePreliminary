<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - UdemyMicroservices.Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/UdemyMicroservices.Web.styles.css" asp-append-version="true"/>
    @await RenderSectionAsync("Css", false)
</head>
<body>


    <partial name="_Header_Dark"/> 
 

    <div class="container">
        
        <div class="row">
            
            <div class="col-md-9">
                <partial name="_Error"/>
                @RenderBody()
            </div>
            <div class="col-md-3">
                
                
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        Menu
                    </a>
                    <a asp-page="/Instructor/Index" class="list-group-item list-group-item-action">Home Page</a>
                    <a asp-page="/Instructor/Course/GetAll" class="list-group-item list-group-item-action">Course List</a>
                    <a asp-page="/Instructor/Course/Create" class="list-group-item list-group-item-action">Create Course</a>
                  
                </div>

            </div>
        </div>

        
    </div>

<partial name="_Footer"/>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>